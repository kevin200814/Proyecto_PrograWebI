
@{
    ViewBag.Title = "Posible_agregar_evento";
}

<h2>Posible_agregar_evento</h2>

<form id="form1" runat="server">
    <div class="container">
        <br />
        <div class="card text-center">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="true" href="#">Evento <i class="bi bi-calendar2-event-fill"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Mis Eventos <i class="bi bi-list-stars"></i></a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <h5 class="card-title">Nuevo Evento</h5>

                <div class="row">
                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">Titulo</span>
                            <input type="text" class="form-control" placeholder="Titulo" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">Fecha</span>
                            <input type="date" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">Hora Inicio</span>
                            <input type="time" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">Hora Fin</span>
                            <input type="time" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                    </div>

                </div>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">Duración</span>
                            <input type="time" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">Lugar</span>
                            <select class="form-control" aria-label="Username" aria-describedby="basic-addon1">
                                <option>Cancha</option>
                                <option>Salón de usos multiples</option>
                                <option>Teatro</option>
                                <option>Estacionamiento</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">
                                Estado
                            </span>
                            <select class="form-control" aria-label="Username" aria-describedby="basic-addon1">
                                <option>Activo</option>
                                <option>No activo</option>
                                <option>Pendiente</option>
                            </select>
                        </div>
                    </div>


                </div>
                <hr />

                <div class="row">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">Tipo de evento</span>
                            <select class="form-control" aria-label="Username" aria-describedby="basic-addon1">
                                <option>Reunión</option>
                                <option>Extensión universitaria</option>
                                <option>Exposiciónes</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">Dirigido</span>
                            <select class="form-control" aria-label="Username" aria-describedby="basic-addon1">
                                <option>Estudiantil</option>
                                <option>Profesional </option>
                                <option>Público</option>
                                <option>Personal administrativo</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">Costo</span>
                            <input type="text" class="form-control" placeholder="$0.00" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                    </div>
                </div>
                <hr />

                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">Descripción</span>
                            <textarea class="form-control" placeholder="Escribe una descripción..." aria-label="Username" aria-describedby="basic-addon1"></textarea>
                        </div>
                    </div>
                </div>



            </div>
            <div class="card-footer">
                <button class="btn btn-primary">GUARDAR EVENTO <i class="bi bi-sd-card"></i></button>
                <button class="btn btn-danger">DESCARTAR EVENTO <i class="bi bi-trash"></i></button>
            </div>
        </div>
    </div>
</form>