@model ReservacionEventosUSAM.Models.CRUD.ModuloUpdate
@{
    ViewBag.Title = "Actualizar modulo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ActualizarModulo", "Modulos", FormMethod.Post, new { role = "form", @class = "" }))
{
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Actualizar Modulo</h3>
        </div>
        <div class="card-body">
            @Html.HiddenFor(d => d.codmod)

            @Html.AntiForgeryToken()

            @Html.ValidationMessage("error", new { @class = "tex-danger" })

            @Html.LabelFor(d => d.nombre)
            @Html.TextBoxFor(d => d.nombre, new { @class = "form-control" })
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-success" value="Guardar" />
            <a class="btn btn-danger" href="@Url.Content("~/Modulos/ConsultarModulos/")">Cancelar</a>
        </div>
    </div>
}