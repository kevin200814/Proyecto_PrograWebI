@model ReservacionEventosUSAM.Models.CRUD.UsuarioInsert

@{
    ViewBag.Title = "AgregarUsuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nuevo Usuario</h2>

<div class="container">
    <br />
    <div class="card text-center">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="true" href="#">Nuevo Usuario <i class="bi bi-calendar2-event-fill"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Content("~/TipoEstado/ConsultarTipoEstado")">Mostrar Roles <i class="bi bi-list-stars"></i></a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <h5 class="card-title">Nuevo Evento</h5>

            @using (Html.BeginForm("AgregarUsuarios", "Usuarios", FormMethod.Post, new { role = "form", @class = "" }))
            {

                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group">

                            @Html.LabelFor(d => d.usuario, new { @class = "input-group-text" })
                            @Html.TextBoxFor(d => d.usuario, new { @class = "form-control" })

                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">Contraseña</span>
                            @Html.TextBoxFor(d => d.contrasena_usuario, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">Estado</span>
                            @Html.TextBoxFor(d => d.cod_estado, new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1">Rol</span>
                            @Html.TextBoxFor(d => d.id_rol, new { @class = "form-control" })

                        </div>
                    </div>
                </div>
                <br />
                <br />
                <br />
                <br />
                <div class="card-footer">
                    <button class="btn btn-primary">GUARDAR <i class="bi bi-sd-card"></i></button>
                    <button class="btn btn-danger">DESCARTAR <i class="bi bi-trash"></i></button>
                </div>
            }
        </div>
    </div>
 </div>