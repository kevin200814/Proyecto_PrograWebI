@model  List<ReservacionEventosUSAM.Models.CRUD.PersonaEventosVista>
@{
    ViewBag.Title = "ConsultarPersonaEvento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>panel de administración</h2>
<div class="card text-center">
    <div class="card-header">
        <div class="alert alert-info" role="alert">
            <b><h3>Panel de Administración</h3></b>
        </div>

        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link" aria-current="true" href="@Url.Content("~/Eventos/ConsultarEventos")">Eventos <i class="bi bi-calendar2-event-fill"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Content("~/Lugares/ConsultarLugares")">Lugares <i class="bi bi-geo-alt-fill"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="@Url.Content("~/Personas/ConsultarPersonas")">Personas <i class="bi bi-people-fill"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="@Url.Content("~/Usuarios/ConsultarUsuarios")">Usuarios <i class="bi bi-people-fill"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Content("~/TipoEstado/ConsultarTipoEstado")">Tipo estado<i class="bi bi-person-bounding-box"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Content("~/RolOpera/ConsultarRolOpera")">Rol opera<i class="bi bi-person-bounding-box"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Content("~/Operaciones/ConsultarOperacion")">operaciones<i class="bi bi-person-bounding-box"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Content("~/Modulos/ConsultarModulos")">Modulos<i class="bi bi-person-bounding-box"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Content("~/Tipo_evento/ConsultarTipoEvento")">Tipo evento <i class="bi bi-calendar2-event"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="@Url.Content("~/Tipo_persona/ConsultarTipoPersona")">Tipo persona <i class="bi bi-person-bounding-box"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="@Url.Content("~/PersonaEventos/ConsultarPersonaEvento")">Persona Eventos<i class="bi bi-person-bounding-box"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Content("~/Registros/ConsultarRegistro")">Registros <i class="bi bi-person-lines-fill"></i></a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="@Url.Content("~/Roles/ConsultarRoles")">Roles <i class="bi bi-toggle2-on"></i></a>
            </li>
        </ul>
    </div>

    <div class="card-body">
        <br />

        <div class="table-responsive">
            <!--Boton de agregar-->
            <button class="btn btn-primary float-start text-light" onclick="document.location.href='@Url.Content("~/PersonaEventos/AgregarPersonaEvento")'">Persona eventos</button>
            <br />
            <!-- Aquí va la tabla ¡No olviden poner el id a la tabla!-->
            <table id="table" class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombres</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Profesion</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var objPerson in Model)
                    {
                        <tr>
                            <th scope="row">@objPerson.id_persona</th>
                            <td>@objPerson.nombres_persona</td>
                            <td>@objPerson.apellidos_persona</td>
                            <td>@objPerson.profesion_persona</td>
                            <td>
                                <a class="btn btn-primary" href="@Url.Content("~/PersonaEventos/ActualizarPersonaEvento/"+objPerson.id_persona)"><i class="bi bi-pencil-square"></i></a>
                                <a class="btn btn-danger" href="@Url.Content("~/PersonaEventos/DeletePersonaEvento/"+objPerson.id_persona)"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- Aquí termina la tabla -->
        </div>

    </div>
</div>

