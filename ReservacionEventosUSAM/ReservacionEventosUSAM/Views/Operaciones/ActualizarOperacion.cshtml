@model ReservacionEventosUSAM.Models.CRUD.OperacionUpdate
@{
    ViewBag.Title = "Actualizar Operacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ActualizarOperacion", "Operaciones", FormMethod.Post, new { role = "form", @class = "" }))
{
    <div class="card">
        <div class="card-header">
            <h3>Actualizar operacion</h3>
        </div>
        <div class="card-body">

            @Html.HiddenFor(d => d.codopera)

            @Html.AntiForgeryToken()

            @Html.ValidationMessage("error", new { @class = "tex-danger" })

            @Html.LabelFor(d => d.nomopera)
            @Html.TextBoxFor(d => d.nomopera, new { @class = "form-control" })
            @Html.ValidationMessage("Nombre de operación", new { @class = "text-danger" })

            @Html.LabelFor(d => d.codmod)
            @Html.TextBoxFor(d => d.codmod, new { @class = "form-control" })
            @Html.ValidationMessage("Modulo", new { @class = "text-danger" })
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-success" value="Guardar" />
            <a class="btn btn-danger" href="@Url.Content("~/Operaciones/ConsultarOperacion/")">Cancelar</a>
        </div>
    </div>
}